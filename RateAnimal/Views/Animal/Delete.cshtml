@model RateAnimal.Models.Animal

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h2>Delete your Animal</h2>
    <h3>Are you sure you want to delete this?</h3>

    <div class="card-group">
        <div class="card">
            <img class="card-img-top" src="@Html.Value(Html.DisplayNameFor(model =>model.ImgUrl))"
                 alt="Card image cap" style="height:150px; width:280px;" />
            <div class="card-body">
                <h5 class="card-title"><strong>Name:</strong>&nbsp;@Html.DisplayFor(model => model.Name)</h5>
                <p class="card-text"><strong>Category:</strong>&nbsp;@Html.DisplayFor(model => model.Category)</p>
                <p class="card-text"><strong>Size:</strong>&nbsp;@Html.DisplayFor(model => model.Size)</p>
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />&nbsp;
        <a class="btn btn-default" asp-action="Index">Back to List</a>
    </form>
</div>
